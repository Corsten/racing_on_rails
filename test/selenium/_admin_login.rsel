open "/account/login"
assert_text_not_present "error"
assert_location "*/account/login"
assert_text_present "Welcome"
assert_element_present "email"
assert_element_present "user_password"
type "email", "admin@example.com"
type "user_password", "secret"
click_and_wait "name=login"
assert_text_not_present "error"
assert_location "*/"
click_and_wait "id=admin_link"
assert_location "*/admin/events"