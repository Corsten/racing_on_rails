<% @page_title = "#{@person.name}: Events" %>
<% @show_tabs = (promoter? || administrator?) -%>

<div class="container-fluid">
  <div class="row-fluid span4">
    <h3>Promoted Events</h3>
    <%= table :columns => 2, :collection => @events do %>
      <tr>
        <th>Date</th>
        <th>Name</th>
      </tr>
      <%= render :partial => "event", :collection => @events.sort_by(&:date) %>
    <% end -%>
  </div>
</div>
