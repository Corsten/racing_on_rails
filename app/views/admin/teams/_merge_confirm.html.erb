      <%= link_to_remote( 
            image_tag('/images/icons/cancel.png'), 
            :url => { :action => "cancel_in_place_edit", :id => @team.to_param },
            :html => { :class => "image" }
          )
       %>
      <%= image_submit_tag '/images/icons/accept.png', :class => "button" %>
    </div>
  </form>
