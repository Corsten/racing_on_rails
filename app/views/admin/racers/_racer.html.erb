<tr class="<%= cycle("even", "odd") %>" id="racer_<%= racer.id %>_row" style="position: relative;">
  <td class="name" style="position: relative;">
    <div class="record" id="racer_<%= racer.id %>">
      <%= in_place_editor_field(:racer, :name, racer, true) %>
    </div>
  </td>
  <td class="team">
    <%= in_place_editor_field(:racer, :team_name, racer) %>
  </td>
  <td class="aliases not_editable">
    <%= render(:partial => 'aliases', :locals => { :racer => racer }) %>
  </td>
  <td class="number not_editable">
    <%= racer.road_number(false, @current_year) %>
  </td>
  <td class="number not_editable">
    <%= racer.xc_number(false, @current_year) %>
  </td>
  <td class="number not_editable">
    <%= racer.dh_number(false, @current_year) %>
  </td>
  <td class="number not_editable">
    <%= racer.ccx_number(false, @current_year) %>
  </td>
  <td class="check_box not_editable">
    <%= render :partial => "shared/member", :locals => { :record => racer } %>
  </td>
  <td class="actions not_editable last">
      <%= link_to 'Results', :controller => '/admin/results', :action => 'racer', :id => racer.id %>
    |
    <%= link_to 'Edit', edit_admin_racer_path(racer) %>
  </td>
</tr>
