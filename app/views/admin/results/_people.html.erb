<% table :caption => "People" do %>
  <th>&nbsp;</th>
  <%- for person in people -%>
  <tr class="<%= cycle("even", "odd") %>">
      <td><%= link_to_remote(
        person.name, 
        :url => {:action => "results", :id => person.id}, 
        :update => 'right_person',
        :before => visual_effect(:highlight, 'right_person', :to => 0.4),
        :complete => visual_effect(:appear, 'right_person'))
      %>
      <br>
      <small><%= [person.team.blank? ? nil : person.team.name, person.city, person.racing_age].compact.join(', ') %></small>
    </td>
  </tr>
  <%- end -%>
<% end -%>
