<tr class="scores_<%= @result.id %>">
  <td></td>
  <td class="result">
    <div class="place"><small><%= score.source_result.place %></small></div>
    <div class="event"><small><%= score.source_result.event.name %></small></div>
  </td>
  <td><small><%= score.source_result.race.name %></small></td>
  <td class="right"><small><%= score.source_result.event.date.strftime("%D") %></small></td>
  <td class="right"><small><%= number_with_precision(score.points, :precision => 0) %></small></td>
  <td></td>
</tr>