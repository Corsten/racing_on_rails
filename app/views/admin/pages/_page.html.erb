<tr class="<%= cycle("even", "odd") %>" id="page<%= page.id %>_row">
  <td class="title">
    <div class="record" id="page_<%= page.id %>" style="margin-left: <%= page.depth * 16 %>px">
      <%= in_place_editor_field(:page, :title, page) %>
    </div>
  </td>
  <td class="updated not_editable">
    <%= updated(page) %>
  </td>
  <td class="actions not_editable last">
    <%= link_to "Add Child", new_admin_page_path(:page => { :parent_id => page.id }) %> |
    <%= link_to "Edit", edit_admin_page_path(page) %>
  </td>
</tr>

<%= render page.children %>
