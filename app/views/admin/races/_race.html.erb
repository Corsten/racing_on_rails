<tr id="race_<%= race.id %>_row">
  <td class="race">
    <%= content_tag( 
      :div, 
      :class => "in_place_editable", 
      "data-id" => race.id, 
      "data-url" => update_attribute_admin_race_path(race, :format => :js), 
      "data-model" => "race", 
      "data-attribute" => "category_name") do %><%= race.category_name %><% end %>
    <%= "&nbsp;&nbsp;(#{race[:field_size]})" if race[:field_size] %>
  </td>
  <td class="right">
    <%= link_to "Edit", edit_admin_race_path(race), :id => "edit_race_#{race.id}" %>
  </td>
  <td class="right delete">
    <%= link_to(image_tag('/images/icons/delete.png'),
    :url => admin_race_url(race),
    :remote => true,
    :html => { :class => "image", :id => "destroy_race_#{race.id}", :title => "Delete race" },
    :confirm => (Rails.env.acceptance? || !promoter?) ? nil : "Really delete #{race.name}?",
    :method => :delete)
    %>
  </td>
</tr>
