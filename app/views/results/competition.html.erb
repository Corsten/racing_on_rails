<% @page_title = "Results: #{@person.name}: #{@competition.name}" %>

<%# TODO Use helper/partial? %>
<h2><%= link_to(@person.name, :action => 'person', :id => @person.to_param) %></h2>

<%- for result in @results.sort { |x, y| y.date <=> x.date } -%>
<% table :caption => %Q{#{result.place.to_i.ordinalize} &mdash;
                        #{link_to(@competition.name, :action => 'event', :id => @competition.to_param)}
                        #{link_to(result.event.name, :action => 'event', :id => @competition.to_param) unless result.event.name[@competition.name]}
                        #{link_to(result.race.name, :action => 'event', :id => @competition.to_param) unless result.event.name[result.race.name]}
} do %></th>
  <tr>
    <th>&nbsp;</th>
    <th>Race</th>
    <th>Category</th>
    <th>Team</th>
    <th>Date</th>
    <th class="right">Points</th>
  </tr>
  <% for score in result.scores.sort { |x, y| y.source_result.date <=> x.source_result.date } %>
  <tr class="<%= cycle("even", "odd") %>">
    <td class="right" width="24"><%= score.source_result.place %></td>
    <td width="400">
      <%= link_to(score.source_result.event.full_name, :controller => 'results', :action => 'event', 
                  :id => score.source_result.event.id, :anchor => "race_#{score.source_result.race.id}") unless score.source_result.event.is_a?(Competition) %>
      <%= link_to(score.source_result.event.full_name, :controller => 'results', :action => 'competition', :competition_id => score.source_result.event.id, :person_id => @person.id) if score.source_result.event.is_a?(Competition)%></td>
    </td>
    <td width="200"><%= score.source_result.race.name %></td>
    <td width="200"><%= score.source_result.team_name %></td>
    <td width="100"><%= score.source_result.event.date.strftime("%D") %></td>
    <td class="right"><%= number_with_precision(score.points, :precision => 1) %></td>
  </tr>
  <% end %>
  <tr>
    <td width="24"></td>
    <td width="400"></td>
    <td width="200"></td>
    <td width="200"></td>
    <td width="100"></td>
    <td class="total_points"><span class="total">TOTAL</span><%= number_with_precision(result.points, :precision => 1) %></td>
  </tr>
<% end -%>
<%- end -%>

<%# TODO Add year param %>
<p class= "centered">
  See all results for <%= link_to(@person.name, {:action => 'person', :id => @person.to_param}, :class => 'obvious') %> or the
  <% if @competition.is_a?(Ironman) %>
    <%= link_to(@competition.name, {:controller => 'ironman', :action => 'index', :year => @competition.date.year}, :class => 'obvious') %>.
  <% else %>
    <%= link_to(@competition.name, {:action => 'event', :id => @competition.to_param}, :class => 'obvious') %>.
  <% end %>
</p>
