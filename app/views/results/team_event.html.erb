<% @page_title = "Results: #{@team.name}: #{@event.name}" %>

<%# TODO Use helper/partial? %>
<h1><%= link_to(@team.name, :action => 'team', :id => @team.to_param) %></h1>

<%- for result in @results -%>
<table class="base">
  <caption>
    <%= result.place.to_i.ordinalize %> &mdash; 
      <%= link_to(@event.name + ' ', :action => 'event', :id => @event.to_param) %>
      <%= link_to(result.race.event.name + ' ', :action => 'event', :id => @event.to_param) unless @event.name == result.race.event.name %>
      <%= link_to(result.race.name, :action => 'event', :id => @event.to_param) unless result.race.name == result.race.event.name %></th>
  </caption>
  <tr>
    <th>&nbsp;</th>
    <th>Race</th>
    <th>Category</th>
    <th>Person</th>
    <th>Date</th>
    <th class="right">Points</th>
  </tr>
  <% for score in @scores %>
  <tr class="<%= cycle("even", "odd") %>">
    <td class="right" width="24"><%= score.source_result.place %></td>
    <td width="400"><%= score.source_result.race.event.name %></td>
    <td width="200"><%= score.source_result.race.name %></td>
    <td width="200"><%= score.source_result.person_name %></td>
    <td width="100"><%= score.source_result.event.date.strftime("%D") %></td>
    <td class="right" width="50"><%= number_with_precision(score.points, :precision => 1) %></td>
  </tr>
  <% end %>
  <tr>
    <td width="24"></td>
    <td width="400"></td>
    <td width="200"></td>
    <td width="200"></td>
    <td colspan="2" width="150" class="right"><span class="total">TOTAL</span><%= number_with_precision(result.points, :precision => 1) %></td>
  </tr>
</table>

<%- end -%>

<%# TODO Add year param %>
<div>
  See all results for <%= link_to(@team.name, {:action => 'team', :id => @team.to_param}, :class => 'obvious') %> or the
  <%= link_to(@event.name, {:action => 'event', :id => @event.to_param}, :class => 'obvious') %>.
</div>
