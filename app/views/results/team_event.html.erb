<% @page_title = "Results: #{@team.name}: #{@event.full_name}" %>

<h2><%= link_to(@team.name, team_results_path(@team)) %></h2>

<% table :caption => %Q{#{@result.place.to_i.ordinalize} &mdash;
                        #{link_to(@result.race.full_name, event_results_path(@result.event, :anchor => "race_#{@result.race.id}"))}
} do %>
  <tr>
    <th>&nbsp;</th>
    <th>Race</th>
    <th>Category</th>
    <th>Person</th>
    <th>Date</th>
    <th class="right">Points</th>
  </tr>
  <% @result.scores.stable_sort_by(:points).stable_sort_by(:source_event_date).each do |score| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td class="right" width="24"><%= score.source_result.place unless (score.source_result.event == @result.event) %></td>
    <td width="400">
      <% if score.event_name -%>
        <%= score.event_name %>
      <% elsif score.source_result.event.is_a?(Competition) -%>
        <%= link_to(score.source_result.race.full_name, 
                event_team_results_path(score.source_result.event, @team, 
                :anchor => "race_#{score.source_result.race.id}")) %>
      <% else -%>
        <%= link_to(score.source_result.event.full_name, 
                event_results_path(score.source_result.event, 
                :anchor => "race_#{score.source_result.race.id}")) %>
      <% end -%>
    </td>
    <td width="200"><%= score.source_result.race.name %></td>
    <td width="200">
      <%= score.description || score.source_result.person_name %>
    </td>
    <td width="100"><%= (score.date || score.source_result.date).strftime("%D") %></td>
    <td class="right"><%= number_with_precision(score.points, :precision => 1) %></td>
  </tr>
  <% end %>
  <tr>
    <td width="24"></td>
    <td width="400"></td>
    <td width="200"></td>
    <td width="200"></td>
    <td width="100"></td>
    <td class="total_points"><span class="total">TOTAL</span><%= number_with_precision(@result.points, :precision => 1) %></td>
  </tr>
<%- end -%>

<%# TODO Add year param %>
<p class= "centered">
  See all results for <%= link_to(@team.name, team_results_path(@team), :class => 'obvious') %> or the
  <%= link_to(@result.event.full_name, event_results_path(@result.event), :class => 'obvious') %>.
</p>
