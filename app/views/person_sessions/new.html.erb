<% @page_title = "Login" %>
<% @show_tabs = false %>

<div class="column_grid_container login">
  <% form_for @person_session, :url => person_session_path do |f| %>
    <%= f.error_messages :header_message => nil, :message => nil %>
    <div class="span-last">
      <%= f.labelled_text_field :login %>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="page_buttons span-3 last right">
      <%= link_to "Forgot your password?", new_password_reset_path, { :class => "obvious forgot", :id => "forgot" } %>
      <%= submit_tag "Login", :id => "login_button" %>
    </div>
  <% end -%>
</div>

<%= focus("person_session_login") if @person_session.login.blank? %>
<%= focus("person_session_password") unless @person_session.login.blank? %>
