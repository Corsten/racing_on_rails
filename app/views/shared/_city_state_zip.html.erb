<div class="control-group">
  <%= f.label :city, "City, State ZIP", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :city, :class => "city", :maxlength => 30 %>
    <%= f.text_field :state, :class => "state", :maxlength => 10 %> 
    <%= f.text_field :zip, :class => "zip", :maxlength => 9 %>
  </div>
</div>
