<% if object.errors.present? %>
<div class="row-fluid">
  <div class="span12">
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%- object.errors.full_messages.each do |message| %>
        <%= message %><br/>
        <% end -%>
      </div>
  </div>
</div>
<% end %>
