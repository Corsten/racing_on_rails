<%= tabs do |tabs|
  years = Event.find_all_years
  current_year = Date.today.year
  
  unless years.include?(current_year)
    years << current_year
    years.sort!.reverse!
  end

  years.each do |year|
    tabs.add(year, bar_path(:discipline => Discipline[race.try(:discipline)], :year => year, :category => race.try(:category_friendly_param)))
  end
end -%>
