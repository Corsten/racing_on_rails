<% @page_title = "Login" %>
<% @show_tabs = false %>

<% if current_user %>

<% form_for @user_session, :method => :destroy do |f| %>
  <% table :caption => "Logged In", :id => "login" do %>
    <tr><th colspan="2">&nbsp;</th></tr>
    <tr>
      <td>You are logged-in as <%= current_user.name %></td>
    </tr>
    <tr>
      <td><input type="submit" name="logout" value="Logout"/></td>
    </tr>
  <% end -%>
<% end -%>

<% else -%>

<h2 class="centered">Welcome</h2>

  <% form_for @user_session, :url => user_session_path do |f| %>
  <div class="login centered">
    <%= f.error_messages %>
    <%= f.labelled_text_field :email %><br/>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <div class="page_buttons last">
      <div style="float: left;"><%= link_to "Forgot your password?", new_password_reset_path, { :class => "obvious forgot" } %></div>
      <div class="last right" style=""><input type="submit" name="login" value="Login" class="right" id="login_button" /></div>
    </div>
  </div>
  <% end -%>
  
<% end -%>

<%= focus("user_session_email") %>
