<%= f.hidden_field :"#{method}_id" -%>
<%= f.hidden_field :"#{method}_name" -%>

<button type="button"
        class="btn btn-default select-modal <%= 'none' unless object.send(method) %>"
        data-method="<%= method %>"
        data-object-name="<%= object_name %>"
        data-target="#<%= target %>_select_modal"
        data-toggle="modal"
        data-type="<%= type %>"
        id="<%= target %>_select_modal_button">
  <% if method == :team %>
  <span class="glyphicon glyphicon-group"></span>
  <% else %>
  <span class="glyphicon glyphicon-user"></span>
  <% end %>
  <span id="<%= target %>_name_button"><%= object.send(method)&.name || "Click to select" %></span>
</button>

<% if remove_button -%>
<button type="button"
        class="btn btn-default"
        style="<%= 'display: none' unless object.send(method) %>"
        title="Remove <%= method %>"
        id="<%= target %>_remove_button">
  <span class="glyphicon glyphicon-remove"></span>
  <% end -%>
</button>
