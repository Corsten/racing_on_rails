<% @page_title = "Races: #{@category.name}" %>

<h3><%= @category.name %></h3>
<%= table  do %>
  <tr><th>&nbsp;</th></tr>
  <% for race in @category.races %>
  <tr>
    <td><%= link_to(race.event.name, event_results_path(race.event, :anchor => "race_#{race.id}")) %></td>
  </tr>
  <% end %>
<% end %>
