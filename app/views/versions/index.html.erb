<% @show_tabs = (promoter? || administrator? || official?) -%>

<h2><%= @person.name %></h2>

<p>
  <% if @person.versions.empty? %>
    <strong>No other versions</strong>
  <% end -%>
</p>

<%= render :partial => "version", :collection => @person.versions.sort_by(&:updated_at).reverse %>

<div class="row-fluid control-group">
  <div class="span12">
    <%= link_to("Edit Account", edit_admin_person_path(@person), :class => "obvious") if administrator? %>
    <%= link_to("Edit Account", edit_person_path(@person), :class => "obvious") unless administrator? %>
    <div class="pull-right created_updated"><%= render :partial => "people/created_updated" %></div>
  </div>
</div>
