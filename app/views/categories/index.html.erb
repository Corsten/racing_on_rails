<% @page_title = "Categories" %>

<h3>Categories</h3>

<%= render "shared/search", placeholder: "Search by category name" %>

<%= will_paginate @categories %>

<%= table collection: @categories, columns: 2 do %>
  <thead>
    <tr>
      <td class="name">Name</td>
      <td class="ability">Ability</td>
      <td class="ages">Ages</td>
      <td class="gender">Gender</td>
      <td class="equipment">Equipment</td>
      <td class="weight">Weight</td>
    </tr>
  </thead>
  <tbody>
    <%= render @categories %>
  </tbody>
<% end %>

<%= will_paginate @categories %>
