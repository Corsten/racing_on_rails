<% if events.present? %>
  <%= table :caption => "Promoted Events", :class => "box-3 last promoted_events", :collection => events do %>
    <tr>
      <th>Date</th>
      <th>Name</th>
    </tr>
    <%= render :partial => "people/event", 
               :collection => events.sort_by(&:date).reverse
    %>
  <% end -%>
<% end %>