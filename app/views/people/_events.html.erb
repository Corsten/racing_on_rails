  <% table :caption => "Promoted Events", :class => "box-3 last" do %>
    <tr>
      <th>Date</th>
      <th>Name</th>
    </tr>
    <%= render :partial => "people/event", 
               :collection => @person.events.find(:all, :conditions => [ 
                 "parent_id is null and date between ? and ?", ASSOCIATION.now.beginning_of_year, ASSOCIATION.now.end_of_year 
               ]).sort_by(&:date).reverse 
    %>
  <% end -%>
